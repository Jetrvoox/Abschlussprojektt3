<!DOCTYPE html>
<html>
<head>
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
<h1>Admin Dashboard</h1>

<div class="stats">
    <div class="stat-card">
        <h3>Total Products</h3>
        <p><%= stats.products %></p>
    </div>
    <div class="stat-card">
        <h3>Total Orders</h3>
        <p><%= stats.orders %></p>
    </div>
</div>

<h2>Recent Orders</h2>
<table>
    <% recentOrders.forEach(order => { %>
        <tr>
            <td>Order #<%= order.id %></td>
            <td>$<%= order.total.toFixed(2) %></td>
            <td><%= order.status %></td>
        </tr>
    <% }) %>
</table>
</body>
</html>